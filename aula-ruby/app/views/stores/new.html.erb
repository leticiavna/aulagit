<h1>Nova Loja</h1>
<br>

<p><%= notice %></p>
<p><%= alert %></p>
<br>

<%= form_for @store, url: :stores, method: :post do |form| %> 
	<% if @store.errors.any? && @store.errors[:address] %>
		<%= form.label "Endereço #{@store.errors[:address].first}" %>
	<% else %>
		<%= form.label "Endereço" %>
	<% end %>
	<%= form.text_field :address %>
	<br>

	<% if @store.errors.any? && @store.errors[:telephone] %>
		<%= form.label "Telefone #{@store.errors[:telephone].first}" %>
	<% else %>
		<%= form.label "Telefone" %>
	<% end %>
	<%= form.number_field :telephone %>
	<br>

	<%= form.submit "Criar Loja" %>
<% end %>